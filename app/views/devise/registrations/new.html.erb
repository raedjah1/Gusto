<div class="auth-background">
  
  <!-- Row 1 -->
  <img src="<%= asset_path('backgrounds/salad.jpg') %>" alt="Salad" class="grid-image">
  <img src="<%= asset_path('backgrounds/dessert.jpg') %>" alt="Dessert" class="grid-image">
  <img src="<%= asset_path('backgrounds/garnish.jpg') %>" alt="Salad" class="grid-image">


  <!-- Row 2 -->
  <img src="<%= asset_path('backgrounds/dessert.jpg') %>" alt="Appetizer" class="grid-image">
  <img src="<%= asset_path('backgrounds/spices.jpg') %>" alt="Spices" class="grid-image">
  <img src="<%= asset_path('backgrounds/drinks.jpg') %>" alt="Drink" class="grid-image">

  <!-- Row 3 -->
  <img src="<%= asset_path('backgrounds/garnish.jpg') %>" alt="Garnish" class="grid-image">
  <img src="<%= asset_path('backgrounds/fruits.jpg') %>" alt="Fruits" class="grid-image">
  <img src="<%= asset_path('backgrounds/spices.jpg') %>" alt="Spices" class="grid-image">
</div>

<div class="auth-container">
  <div class="auth-form">
    <h1>Join Gusto</h1>
    <p class="subtitle">Create an account to start your culinary journey</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, autofocus: true, class: "input-field", placeholder: "Full Name" %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "input-field", placeholder: "Email Address" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input-field", placeholder: "Password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field", placeholder: "Confirm Password" %>
      </div>

      <%= f.submit "Sign Up", class: "auth-button primary-button" %>

      <div class="auth-links">
        <%= link_to "Already have an account? Login", new_session_path(resource_name), class: "link" %>
      </div>
    <% end %>
  </div>
</div>