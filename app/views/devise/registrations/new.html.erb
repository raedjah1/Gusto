<div class="auth-background">
  <!-- Row 1 -->
  <img src="<%= asset_path('backgrounds/salad.jpg') %>" alt="Salad" class="grid-image">
  <img src="<%= asset_path('backgrounds/dessert.jpg') %>" alt="Dessert" class="grid-image">
  <img src="<%= asset_path('backgrounds/garnish.jpg') %>" alt="Garnish" class="grid-image">

  <!-- Row 2 -->
  <img src="<%= asset_path('backgrounds/dessert.jpg') %>" alt="Dessert" class="grid-image">
  <img src="<%= asset_path('backgrounds/spices.jpg') %>" alt="Spices" class="grid-image">
  <img src="<%= asset_path('backgrounds/drinks.jpg') %>" alt="Drinks" class="grid-image">

  <!-- Row 3 -->
  <img src="<%= asset_path('backgrounds/garnish.jpg') %>" alt="Garnish" class="grid-image">
  <img src="<%= asset_path('backgrounds/fruits.jpg') %>" alt="Fruits" class="grid-image">
  <img src="<%= asset_path('backgrounds/spices.jpg') %>" alt="Spices" class="grid-image">
</div>

<div class="auth-container">
  <div class="auth-form">
    <div class="auth-header">
      <div class="logo-header">
        <img src="<%= asset_path('gusto_logo.png') %>" alt="Gusto Logo" class="logo-image animate-logo">
        <h1>Welcome to Gusto</h1>
      </div>
      <p class="subtitle">Create an account to start your culinary journey</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
      <% if resource.errors.any? %>
        <div class="error-message">
          <%= resource.errors.full_messages.join(", ") %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="success-message">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, "Full Name", class: "form-label" %>
        <%= f.text_field :name, autofocus: true, class: "input-field", placeholder: "John Smith", required: true %>
        <% if f.object.errors[:name].any? %>
          <span class="error-message">Name is required</span>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email Address", class: "form-label" %>
        <%= f.email_field :email, class: "input-field", placeholder: "john.smith@example.com", required: true %>
        <% if f.object.errors[:email].any? %>
          <span class="error-message">Please enter a valid email address</span>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", 
                            class: "input-field", 
                            placeholder: "At least 8 characters",
                            required: true,
                            minlength: 8 %>
        <% if f.object.errors[:password].any? %>
          <span class="error-message">Password must be at least 8 characters</span>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, 
                            autocomplete: "new-password", 
                            class: "input-field", 
                            placeholder: "Re-enter your password",
                            required: true %>
        <% if f.object.errors[:password_confirmation].any? %>
          <span class="error-message">Passwords must match</span>
        <% end %>
      </div>

      <%= f.submit "Create Account", class: "auth-button" %>
    <% end %>
    <div class="auth-links">
      <p>Already have an account?</p>
      <p><%= link_to "Sign in", new_session_path(resource_name), class: "link" %></p>
    </div>
  </div>
</div>
