<div class="auth-background">
  <!-- Row 1 -->
  <img src="<%= asset_path('backgrounds/salad.jpg') %>" alt="Salad" class="grid-image">
  <img src="<%= asset_path('backgrounds/dessert.jpg') %>" alt="Dessert" class="grid-image">
  <img src="<%= asset_path('backgrounds/garnish.jpg') %>" alt="Salad" class="grid-image">

  <!-- Row 2 -->
  <img src="<%= asset_path('backgrounds/dessert.jpg') %>" alt="Appetizer" class="grid-image">
  <img src="<%= asset_path('backgrounds/spices.jpg') %>" alt="Spices" class="grid-image">
  <img src="<%= asset_path('backgrounds/drinks.jpg') %>" alt="Drink" class="grid-image">

  <!-- Row 3 -->
  <img src="<%= asset_path('backgrounds/garnish.jpg') %>" alt="Garnish" class="grid-image">
  <img src="<%= asset_path('backgrounds/fruits.jpg') %>" alt="Fruits" class="grid-image">
  <img src="<%= asset_path('backgrounds/spices.jpg') %>" alt="Spices" class="grid-image">
</div>

<div class="auth-container">
  <div class="auth-form">
    <div class="auth-header">
      <div style="display: flex; align-items: center; margin-bottom: 1rem;">
        <img src="<%= asset_path('gusto_logo.png') %>" alt="Gusto Logo" class="logo-image animate-logo" style="height: 40px; width: auto;">
        <h1 style="margin-left: 1rem; margin-bottom: 0; color: #e17055; font-size: 1.5rem; font-family: 'Helvetica', sans-serif; font-weight: 600;">Welcome to Gusto</h1>
      </div>
      <p class="subtitle">Create an account to start your culinary journey</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!-- Display error messages for the entire form -->
      <% if resource.errors.any? %>
        <div class="error-message" style="margin-bottom: 1rem; color: #e74c3c; text-align: center;">
          <%= resource.errors.full_messages.join(", ") %>
        </div>
      <% end %>

      <!-- Success message -->
      <% if flash[:notice] %>
        <div class="success-message" style="margin-bottom: 1rem; color: #2ecc71; text-align: center;">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <!-- Form Fields -->
      <div class="form-group">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, autofocus: true, class: "input-field", placeholder: "John Smith" %>
        <%= f.object.errors[:name].any? ? '<span class="error-message">Name is required</span>'.html_safe : "" %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "input-field", placeholder: "john.smith@example.com" %>
        <%= f.object.errors[:email].any? ? '<span class="error-message">Email is required</span>'.html_safe : "" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input-field", placeholder: "At least 8 characters" %>
        <%= f.object.errors[:password].any? ? '<span class="error-message">Password is required</span>'.html_safe : "" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field", placeholder: "Re-enter your password" %>
        <%= f.object.errors[:password_confirmation].any? ? '<span class="error-message">Passwords must match</span>'.html_safe : "" %>
      </div>

      <%= f.submit "Sign Up", class: "auth-button primary-button" %>
    <% end %>

    <div class="auth-links">
      <p>Already have an account?</p>
      <%= link_to "Login", new_session_path(resource_name), class: "link" %>
    </div>
  </div>
</div>
