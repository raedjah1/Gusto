<div class="auth-background">
  <!-- Row 1 -->
  <img src="<%= asset_path('backgrounds/salad.jpg') %>" alt="Salad" class="grid-image">
  <img src="<%= asset_path('backgrounds/dessert.jpg') %>" alt="Dessert" class="grid-image">
  <img src="<%= asset_path('backgrounds/garnish.jpg') %>" alt="Garnish" class="grid-image">

  <!-- Row 2 -->
  <img src="<%= asset_path('backgrounds/dessert.jpg') %>" alt="Dessert" class="grid-image">
  <img src="<%= asset_path('backgrounds/spices.jpg') %>" alt="Spices" class="grid-image">
  <img src="<%= asset_path('backgrounds/drinks.jpg') %>" alt="Drinks" class="grid-image">

  <!-- Row 3 -->
  <img src="<%= asset_path('backgrounds/garnish.jpg') %>" alt="Garnish" class="grid-image">
  <img src="<%= asset_path('backgrounds/fruits.jpg') %>" alt="Fruits" class="grid-image">
  <img src="<%= asset_path('backgrounds/spices.jpg') %>" alt="Spices" class="grid-image">
</div>

<div class="auth-container">
  <div class="auth-form">
    <div class="auth-header">
      <div class="logo-header">
        <img src="<%= asset_path('gusto_logo.png') %>" alt="Gusto Logo" class="logo-image animate-logo">
        <h1>Welcome Back</h1>
      </div>
      <p class="subtitle">Login to discover exclusive chef experiences</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "signup-form" }) do |f| %>
      <% if flash[:alert] %>
        <div class="error-message">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="success-message">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :email, "Email Address", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "input-field", placeholder: "john.smith@example.com", required: true %>
        <% if f.object.errors[:email].any? %>
          <span class="error-message">Please enter a valid email address</span>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input-field", placeholder: "Enter your password", required: true %>
        <% if f.object.errors[:password].any? %>
          <span class="error-message">Password is required</span>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "form-label" %>
      </div>

      <%= f.submit "Sign In", class: "auth-button" %>
    <% end %>

    <div class="auth-links">
      <p>Don't have an account?</p>
      <p><%= link_to "Sign up", new_registration_path(resource_name), class: "link" %></p>
      <p><%= link_to "Forgot your password?", new_password_path(resource_name), class: "link" %></p>
    </div>
  </div>
</div>
