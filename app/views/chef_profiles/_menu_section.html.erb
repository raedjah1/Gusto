<div class="menu-section">
  <h3>Menu Offerings</h3>
  <div class="menu-items">
    <% @chef_profile.menu_items.each do |menu_item| %>
      <div class="menu-item" style="position: relative;">
        <h4 class="menu-item-name"><%= menu_item.name %> - <%= number_to_currency(menu_item.price) %></h4>
        <p class="menu-item-description"><%= menu_item.description %></p>
        <% if menu_item.image.attached? %>
          <%= image_tag url_for(menu_item.image.variant(resize_to_limit: [150, 150])), class: "menu-item-image" %>
        <% else %>
          <%= image_tag 'default_image.png', class: "menu-item-image" %>
        <% end %>
        <% if current_user == @chef_profile.user %>
        <% if current_user == @chef_profile.user %>
        <%= link_to image_tag('edit_icon.png', class: 'edit-icon', style: 'width: 10px; height: 10px; position: absolute; bottom: 0; left: 0;'), edit_chef_profile_menu_item_path(@chef_profile, menu_item), class: "button-edit", title: "Edit Menu Item" %>
        <%= link_to image_tag('delete_icon.png', class: 'delete-icon', style: 'width: 10px; height: 10px; position: absolute; bottom: 0; right: 0;'), chef_profile_menu_item_path(@chef_profile, menu_item), method: :delete, data: { confirm: 'Are you sure you want to delete this menu item?' }, class: "button-delete", title: "Delete Menu Item" %>
      <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="menu-actions">
  <% if current_user == @chef_profile.user %>
    <%= link_to "Add Menu Item", new_chef_profile_menu_item_path(@chef_profile), class: "button-secondary" %>
  <% end %>
</div>
