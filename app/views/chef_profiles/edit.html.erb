<div class="form-wrapper">
  <h1 class="form-title">Edit Your Profile</h1>
  <%= form_with(model: @chef_profile, local: true) do |form| %>
    <div class="form-section">
      <div class="form-group">
        <%= form.label :bio, 'Bio', class: 'form-label' %>
        <%= form.text_area :bio, class: 'input-field', rows: 5 %>
      </div>

      <div class="form-group">
        <%= form.label :specialty, 'Specialty', class: 'form-label' %>
        <%= form.text_field :specialty, class: 'input-field' %>
      </div>

      <div class="form-group">
        <%= form.label :experience, 'Years of Experience', class: 'form-label' %>
        <%= form.number_field :experience, min: 0, class: 'input-field' %>
      </div>

      <div class="form-group">
        <%= form.label :availability, 'Availability', class: 'form-label' %>
        <%= form.text_field :availability, class: 'input-field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= form.submit 'Save Changes', class: 'button-primary' %>
      <%= link_to 'Cancel', chef_profile_path(@chef_profile), class: 'button-secondary' %>
    </div>
  <% end %>
</div>
