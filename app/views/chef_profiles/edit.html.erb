<div class="edit-chef-profile">
  <h1>Edit Your Profile</h1>
  <%= form_with(model: @chef_profile, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :bio, 'Bio' %>
      <%= form.text_area :bio, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :specialty, 'Specialty' %>
      <%= form.text_field :specialty, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :experience, 'Years of Experience' %>
      <%= form.number_field :experience, min: 0, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :availability, 'Availability' %>
      <%= form.text_field :availability, class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= form.submit 'Save Changes', class: 'save-button' %>
      <%= link_to 'Cancel', chef_profile_path(@chef_profile), class: 'cancel-button' %>
    </div>
  <% end %>
</div>
