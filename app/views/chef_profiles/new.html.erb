<div class="chef-profile-container">
  <div class="form-wrapper">
    <h1>Create Your Chef Profile</h1>
    <p class="form-subtitle">Share your culinary expertise with food lovers in your area</p>

    <%= form_for @chef_profile, html: { class: "profile-form" } do |f| %>
      <% if @chef_profile.errors.any? %>
        <div class="error-messages">
          <h2><%= pluralize(@chef_profile.errors.count, "error") %> prevented this profile from being saved:</h2>
          <ul>
            <% @chef_profile.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :bio, "About You" %>
        <%= f.text_area :bio, placeholder: "Tell us about your culinary journey and passion for cooking...", rows: 5 %>
      </div>

      <div class="form-group">
        <%= f.label :specialty, "Specialties" %>
        <%= f.text_field :specialty, placeholder: "Italian, French, Asian Fusion (comma separated)" %>
      </div>

      <div class="form-group">
        <%= f.label :experience, "Years of Experience" %>
        <%= f.number_field :experience, min: 0 %>
      </div>

      <div class="form-group">
        <%= f.label :availability, "Availability" %>
        <%= f.text_area :availability, placeholder: "Describe your general availability (e.g., weekends, evenings)", rows: 3 %>
      </div>


      <div class="form-actions">
        <%= f.submit "Create Profile", class: "button-primary" %>
        <%= link_to "Cancel", root_path, class: "button-secondary" %>
      </div>
    <% end %>
  </div>

  <div class="info-sidebar">
    <div class="info-card">
      <h3>Why Join Gusto?</h3>
      <ul>
        <li><i class="fas fa-users"></i> Connect with food enthusiasts</li>
        <li><i class="fas fa-calendar-alt"></i> Flexible scheduling</li>
        <li><i class="fas fa-star"></i> Build your reputation</li>
        <li><i class="fas fa-dollar-sign"></i> Set your own rates</li>
      </ul>
    </div>
  </div>
</div>
