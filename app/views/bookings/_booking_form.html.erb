<div class="booking-container">
  <div class="booking-form">
    <div class="booking-header">
      <h1>Book Your Chef Experience</h1>
      <p class="booking-subtitle">Fill in the details below to customize your experience</p>
    </div>

    <% if @booking %>
      <%= form_for(@booking) do |f| %>
        <div class="booking-form-group">
          <%= f.label :date, "Preferred Date", class: "form-label" %>
          <%= f.date_field :date, class: "input-field", required: true %>
        </div>

        <div class="booking-form-group">
          <%= f.label :time, "Preferred Time", class: "form-label" %>
          <%= f.time_field :time, class: "input-field", required: true %>
        </div>

        <div class="booking-form-group">
          <%= f.label :guests, "Number of Guests", class: "form-label" %>
          <%= f.number_field :guests, class: "input-field", min: 1, required: true %>
        </div>

        <div class="booking-form-group">
          <%= f.label :special_requests, "Special Requests", class: "form-label" %>
          <%= f.text_area :special_requests, class: "input-field", placeholder: "Any dietary restrictions or requirements?" %>
        </div>

        <%= f.hidden_field :chef_profile_id %>
        
        <div class="booking-actions">
          <%= f.submit "Request Booking", class: "button primary-button" %>
        </div>

        <div class="booking-links">
          <%= link_to "Back to Chef Profile", chef_profile_path(@booking.chef_profile), class: "link" %>
        </div>
      <% end %>
    <% else %>
      <p>Booking information is not available.</p>
    <% end %>
  </div>
</div>
