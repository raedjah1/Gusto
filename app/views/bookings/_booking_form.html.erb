<div class="booking-container">
  <div class="booking-form">
    <!-- Booking Header -->
    <div class="booking-header">
      <h1>Bookings</h1>
      <p class="booking-subtitle">Manage your reservations seamlessly</p>
    </div>

    <!-- New Booking Button -->
    <%= link_to "New Booking", new_wizard_bookings_path(step: 'details'), class: "primary-button" %>

    <!-- Bookings Table -->
    <table class="booking-table">
      <thead>
        <tr>
          <th>Chef</th>
          <th>Date</th>
          <th>Time</th>
          <th>Guests</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @bookings.present? %>
          <% @bookings.each do |booking| %>
            <tr>
              <td><%= booking.chef.name %></td>
              <td><%= booking.date.strftime("%B %d, %Y") %></td>
              <td><%= booking.time.strftime("%I:%M %p") %></td>
              <td><%= booking.guests %></td>
              <td>
                <%= link_to "View", booking_path(booking), class: "button secondary-button" %>
                <%= link_to "Edit", edit_booking_path(booking), class: "button tertiary-button" %>
                <%= link_to "Cancel", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }, class: "button danger-button" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5" class="no-bookings">No bookings available.</td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <!-- Optional Booking Links -->
    <div class="booking-links">
      <%= link_to "Back to Dashboard", consumer_dashboard_path, class: "link" %>
      <%= link_to "View Favorites", favorites_path, class: "link" %>
      <%= link_to "Select Chef", new_booking_path, class: "link" %> <!-- Updated link to new_booking_path -->
    </div>
  </div>
</div>
